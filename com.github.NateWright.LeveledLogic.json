{
    "app-id": "com.github.NateWright.LeveledLogic",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "23.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "LL.x86_64",
    "modules": [
        {
            "name": "LeveledLogic",
            "buildsystem": "simple",
            "build-commands": [
                "install -D LL.x86_64 /app/bin/LL.x86_64",
                "install -D LL.pck /app/bin/LL.pck"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "LL.x86_64"
                },
                {
                    "type": "file",
                    "path": "LL.pck"
                }
            ]
        }
    ],
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=pulseaudio",
        "--device=dri"
    ]
}
