{
    "app-id": "com.github.NateWright.LeveledLogic",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "23.08",
    "base": "org.godotengine.Godot",
    "base-version": "stable",
    "sdk": "org.freedesktop.Sdk",
    "command": "godot-runner.pck",
    "modules": [
        {
            "name": "LeveledLogic",
            "buildsystem": "simple",
            "build-commands": [
                "godot --quiet --headless --export-pack 'Linux/X11' /app/bin/godot-runner.pck ./project.godot"
            ],
            "sources": [
                {
                    "type": "dir",
                    "path": "."
                }
            ]
        }
    ],
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=pulseaudio",
        "--device=dri"
    ]
}